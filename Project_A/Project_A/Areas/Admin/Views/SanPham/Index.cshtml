@model IEnumerable<Project_A.Models.SanPham>
<div class="container">
    <table class="table">
        <thead>
            <tr>
                <th>Tên Sản Phẩm</th>
                <th>Mô tả</th>
                <th>Giá</th>
                <th>Hình ảnh</th>
                <th>Thể Loại</th>
                <td>Chức năng</td>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Name</td>
                    <td>@item.Description</td>
                    <td>@item.Price</td>
                    <td><img src="@item.ImageUrl" width="50%" /></td>
                    <td>@item.TheLoai.Name</td>
                    <td>
                        <a asp-action="Upsert" asp-route-id="@item.Id">Edit</a> |
                        <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                        <a class="text-danger" onclick="confirmDelete(@item.Id, $(this))">Delete</a> |
                    </td>
                </tr>
            }
        </tbody>
    </table>
    <a asp-controller="SanPham" asp-action="Upsert" class="btn btn-primary">Thêm mới</a>
</div>

<script>
    function confirmDelete(id, row)
    {
        if (confirm("Bạn có chắc muốn xóa?"))
        {
            xoa(id, row);
        }
    }
    function xoa(id, row){
    $.ajax(
        {
            url: `/Admin/SanPham/Delete`,
            type: 'POST',
            data: { id: id},
            success: function (data) {
                if (data.success) {
                    row.closest("tr").remove();
                }
                else {
                    alert(data.message);
                }
            },
            Error: function (xhr, status, error)
            {
                alert("Xóa thất bại: " + error);
            }
        })
    }
</script>