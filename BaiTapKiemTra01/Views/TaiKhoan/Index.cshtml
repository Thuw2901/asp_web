@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Đăng Ký Tài Khoản";
    
}

@model TaiKhoanViewModel

<div class="container">
    <h3>Đăng Ký Tài Khoản</h3>

    <form method="post">
        <div class="form-group">
            <label for="TenTaiKhoan">Tên tài khoản</label>
            <input type="text" id="TenTaiKhoan" name="TenTaiKhoan" class="form-control" value="@Model.TenTaiKhoan" placeholder="Nhập tên tài khoản" />
        </div>

        <div class="form-group">
            <label for="HoTen">Họ tên</label>
            <input type="text" id="HoTen" name="HoTen" class="form-control" value="@Model.HoTen" placeholder="Nhập họ và tên" />
        </div>

        <div class="form-group">
            <label for="MatKhau">Mật khẩu</label>
            <input type="password" id="MatKhau" name="MatKhau" class="form-control" value="@Model.MatKhau" placeholder="Nhập mật khẩu" />
        </div>

        <div class="form-group">
            <label for="Tuoi">Tuổi</label>
            <input type="number" id="Tuoi" name="Tuoi" class="form-control" value="@Model.Tuoi" placeholder="Nhập tuổi" />
        </div>

        <button type="submit" class="btn btn-primary">Đăng Ký</button>
    </form>

    <h3>Thông Tin Tài Khoản Đã Nhập:</h3>
    <p>@Model.TenTaiKhoan - @Model.HoTen - @Model.MatKhau - @Model.Tuoi</p>
    @if (Model != null)
    {
        <p>TenTaiKhoan đã nhập là : @Model.TenTaiKhoan</p>
        <p>HoTen đã nhập là : @Model.HoTen</p>
        <p>MatKhau đã nhập là : @Model.MatKhau</p>
        <p>Tuoi đã nhập là : @Model.Tuoi</p>

    }
</div>
